{
  "name": "ai-interview-assistant-0.1",
  "version": "2.0.1",
  "description": "Desktop wrapper for AI Interview Assistant",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-renderer": "cd ../renderer && npm install && npm run build",
    "start-dev": "npm run build-renderer && electron .",
    "dist": "npm run build-renderer && electron-builder"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "build": {
    "appId": "com.yourcompany.aiinterviewassistant",
    "productName": "AI Interview Assistant 0.11",
    "files": [
      "main.js",
      "package.json",
      "renderer/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../python/dist/app.exe",
        "to": "python/dist/app.exe"
      }
    ],
    "win": {
      "target": "nsis"
    }
  }
}
